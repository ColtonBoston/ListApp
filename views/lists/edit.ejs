<% include ../partials/header %>
<div class="container">
  <div class="row center">
    <h1>Edit List</h1>
    <form class="" action="/lists/<%= list._id %>?_method=PUT" method="post">
      <div class="form-group">
        <label class="hidden" for="name">Name</label>
        <input class="form-control" id="name" type="text" name="list[name]" value="<%= list.name %>">
      </div>
      <div class="form-group">
        <!-- <label class="hidden" for="items">Items</label>
        <textarea class="form-control" id="items" name="list[items]"><%= list.items.join(",") %></textarea> -->
        <% for (var i = 0; i < list.items.length; i++){ %>
          <input class="form-control" type="text" name="list[items][<%= i %>]]" value="<%= list.items[i] %>">
        <% } %>

      </div>
      <button type="submit" class="btn btn-default">Update</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>
